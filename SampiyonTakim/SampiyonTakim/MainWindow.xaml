<Window x:Class="SampiyonTakim.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid HorizontalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="60*"/>
            <RowDefinition Height="150*"/>
            <RowDefinition Height="75*"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Margin="10" Content="Bu senenin şampiyon takımı hangisi olur?" FontSize="15" FontWeight="Bold"/>
        <StackPanel Grid.Row="1" Margin="20,20,0,0"> 
            <RadioButton Name="rb1" Content="Galatasaray" FontSize="15"  Margin="0,0,0,10"/>
            <RadioButton Name="rb2" Content="Fenerbahçe" FontSize="15" Margin="0,0,0,10"/>
            <RadioButton Name="rb3" Content="Beşiktaş"  FontSize="15"  Margin="0,0,0,10"/>
            <RadioButton Name="rb4" Content="Diğer" FontSize="15" Margin="0,0,0,10"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="50,0,0,0">
            <Button Grid.Row="2" Name="btn1" Content="Oy Ver" Width="100" Height="30" FontSize="12" FontWeight="SemiBold" Click="btn1_Click" Margin="0,0,25,0"/>
            <Button Grid.Row="2" Name="btn2" Content="Sonuçları Göster" Width="100" Height="30" FontSize="12" FontWeight="SemiBold" Click="btn2_Click"/>
        </StackPanel>
                
        
    </Grid>
</Window>
